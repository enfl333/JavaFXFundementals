<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flores.javafx.recap.sessions.Screen2Controller">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" style="-fx-border-style: solid;">
         <children>
            <HBox>
               <children>
                  <Button fx:id="pButton" mnemonicParsing="false" onAction="#startTheBar" prefHeight="27.0" prefWidth="50.0" text="Start" />
                  <Separator prefHeight="7.0" prefWidth="26.0" visible="false" />
                  <ProgressBar fx:id="progressBar" prefHeight="20.0" prefWidth="118.0" progress="0.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="bTaskButton" mnemonicParsing="false" onAction="#startBackgroundTask" text="Start" />
                        <Label text="Start a background task  ">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <TextArea fx:id="outPutTxtArea" prefHeight="200.0" prefWidth="213.0">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
